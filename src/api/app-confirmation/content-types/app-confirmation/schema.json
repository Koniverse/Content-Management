{
  "kind": "collectionType",
  "collectionName": "app_confirmations",
  "info": {
    "singularName": "app-confirmation",
    "pluralName": "app-confirmations",
    "displayName": "App Confirmation",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "position": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "send-fund",
        "xcm",
        "stake"
      ]
    },
    "repeat": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "one",
        "everytime",
        "daily",
        "weekly",
        "monthly"
      ]
    },
    "content": {
      "type": "blocks"
    },
    "confirm_label": {
      "type": "string",
      "default": "OK"
    },
    "cancel_label": {
      "type": "string",
      "default": "Cancel"
    },
    "conditions": {
      "type": "dynamiczone",
      "components": [
        "app-content-components.condition-balance",
        "app-content-components.condition-crowdloan",
        "app-content-components.condition-earning",
        "app-content-components.condition-has-money",
        "app-content-components.condition-nft"
      ]
    }
  }
}
